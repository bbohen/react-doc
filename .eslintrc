{
  "extends": "eslint-config-airbnb",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "classes": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle": [2, "never"],
    "max-len": 0,
    "no-console": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "PROJECT": true
  }
}
